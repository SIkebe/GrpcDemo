root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{xml,csproj,props}]
indent_size = 2

[*.json]
indent_size = 2

csharp_style_namespace_declarations = file_scoped:warning
